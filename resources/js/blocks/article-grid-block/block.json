{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/article-grid-block",
    "version": "0.1.0",
    "title": "Article Grid Block",
    "category": "layout",
    "icon": "grid-view",
    "description": "A responsive 3-column grid displaying articles with thumbnails, titles, and dates.",
    "example": {},
    "supports": {
        "html": false
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-imagewize-article-grid-block"
        },
        "numberOfPosts": {
            "type": "number",
            "default": 3
        },
        "selectedCategory": {
            "type": "number",
            "default": 0
        },
        "selectedTag": {
            "type": "number", 
            "default": 0
        },
        "queryType": {
            "type": "string",
            "default": "recent"
        },
        "dateFontFamily": {
            "type": "string",
            "default": "lato"
        },
        "dateFontSize": {
            "type": "string",
            "default": "small"
        },
        "headingFontFamily": {
            "type": "string",
            "default": "bitter"
        },
        "headingFontSize": {
            "type": "string",
            "default": "subtitle"
        },
        "postSpacing": {
            "type": "string",
            "default": "default"
        },
        "showDate": {
            "type": "boolean",
            "default": true
        },
        "showExcerpt": {
            "type": "boolean",
            "default": false
        },
        "columnGap": {
            "type": "string",
            "default": "default"
        }
    }
}